<h2>Hello Charlotte, what did you accomplish today?</h2>

<div class="form">

  <%= form_for(@goal) do |f| %>

  <div class="field">
    <%= f.label :eat_healthy %>
    <%= f.check_box :eat_healthy %>
  </div>

  <div class="field">
    <%= f.label :exercise %>
    <%= f.check_box :exercise %>
  </div>

  <div class="field">
    <%= f.label :read %>
    <%= f.check_box :read %>
  </div>

  <div class="field">
    <%= f.label :practice_coding %>
    <%= f.check_box :practice_coding %>
  </div>

  <div class="field">
    <%= f.label :call, "Call Family/Friends" %>
    <%= f.check_box :call %>
  </div>

  <div class="field">
    <%= f.label :clean %>
    <%= f.check_box :clean %>
  </div>
  
  <div class="field">
    <%= f.label :budget %>
    <%= f.check_box :budget %>
  </div>

  <br />
  <div class="submit">
    <%= f.submit 'SUBMIT'%>
  </div>

  <% end %>


</div>
