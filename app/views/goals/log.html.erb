<div id="log">
  <h3>Activity Log</h3>
  <p>Please note that all entry deletions are permanant and will be wiped from your database!<p>

    <ul>
      <% @inputs.each do |input| %>
      <button><b><%= input.goal %><br /></b><%= input.created_at.to_date %>

        <%= link_to '[x]',  { action: :destroy, id: input.id }, method: :delete, data: {confirm: "Are you sure? Your data will be deleted"} %></button>
        <% end %>
    </ul>

</div>
